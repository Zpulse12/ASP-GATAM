@inherits LayoutComponentBase
<div >
    <div >
        <CustomNavMenu>
            <input type="checkbox" title="Navigation menu" class="navbar-toggler" hidden />

            <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <AuthorizeView Policy="RequireVolgerRole">
                            <Authorized>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="usersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style=" color:white; font-weight:bold;">
                                        <i class="bi bi-people-fill"></i> Modules
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="usersDropdown">
                                        <li>
                                            <NavLink class="dropdown-item" href="/ModulesOfUser">Mijn modules</NavLink>
                                        </li>
                                    </ul>
                                </li>

                            </Authorized>
