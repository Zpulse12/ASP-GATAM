@inherits LayoutComponentBase
<div >
    <div >
        <CustomNavMenu>
            <input type="checkbox" title="Navigation menu" class="navbar-toggler" hidden />

            <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <AuthorizeView Policy="RequireVolgersRole">
                            <Authorized>
                                <li class="nav-item">
                                    <NavLink class="nav-link" href="/ModulesOfUser" style="color:white; font-weight:bold;">
                                        <i class="bi bi-people-fill"></i> Mijn modules
                                    </NavLink>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                    </ul>
                </div>

            </div>

        </CustomNavMenu>
    </div>
    <main class="main-content">
        <article class="article-content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
<Toasts @rendermode="InteractiveServer" class="p-3" AutoHide="true" Delay="4000" Placement="ToastsPlacement.TopRight" />
